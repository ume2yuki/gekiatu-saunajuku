<h1>ユーザーマイページ</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.doemus.each do |t| %>
  <%= t.user.name %>
  <%= t.name %>
  <%= link_to "編集する", edit_doemu_path(t.id) %> 
  <%= button_to "削除する", doemu_path(t.id), method: :delete %>
<% end %>


<!-- 以下はいいね機能を実装している場合-->
<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_doemus.each do |t| %>
  <%= t.user.name %>
  <%= t.name %>
<% end %>

<%= link_to "投稿一覧に戻る", doemus_path %>